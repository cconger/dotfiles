config defaultToCurrentScreen true
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

bind space:ctrl grid padding:5 0:6,3 1:2,6
bind e:cmd hint ASDFGHJKLQWERTYUIOP

alias 1-left move screenOriginX;screenOriginY screenSizeX/2;screenSizeY 0
alias 1-right move screenOriginX+(screenSizeX/2);screenOriginY screenSizeX/2;screenSizeY 0
alias 2-seg1 move screenOriginX;screenOriginY screenSizeX;screenSizeY/6 1
alias 2-seg2 move screenOriginX;screenOriginY+((screenSizeY/6)*1) screenSizeX;screenSizeY/6 1
alias 2-seg3 move screenOriginX;screenOriginY+((screenSizeY/6)*2) screenSizeX;screenSizeY/6 1
alias 2-seg4 move screenOriginX;screenOriginY+((screenSizeY/6)*3) screenSizeX;screenSizeY/6 1
alias 2-seg5 move screenOriginX;screenOriginY+((screenSizeY/6)*4) screenSizeX;screenSizeY/6 1
alias 2-seg6 move screenOriginX;screenOriginY+((screenSizeY/6)*5) screenSizeX;screenSizeY/6 1
alias 2-full move screenOriginX;screenOriginY screenSizeX;screenSizeY 1
alias 1-topleft move screenOriginX;screenOriginY screenSizeX/2;screenSizeY/2 0
alias 1-botleft move screenOriginX;screenOriginY+(screenSizeY/2) screenSizeX/2;screenSizeY/2 0
alias 1-topright move screenOriginX+(screenSizeX/2);screenOriginY screenSizeX/2;screenSizeY/2 0
alias 1-botright move screenOriginX+(screenSizeX/2);screenOriginY+(screenSizeY/2) screenSizeX/2;screenSizeY/2 0

layout 1Display 'Terminal':REPEAT ${1-right}
layout 1Display 'Google Chrome':REPEAT ${1-left}
layout 1Display 'MacVim':REPEAT ${1-right}

layout 2Displays 'Terminal':MAIN_FIRST ${2-full}
layout 2Displays 'Google Chrome':MAIN_FIRST ${1-left}
layout 2Displays 'MacVim':MAIN_FIRST ${1-right}

layout 2DisplaysSegmented 'Terminal':REPEAT ${2-seg1} | ${2-seg2} | ${2-seg3} | ${2-seg4} | ${2-seg5} | ${2-seg6}
layout 2DisplaysSegmented 'Google Chrome':MAIN_FIRST ${1-left}
layout 2DisplaysSegmented 'MacVim':MAIN_FIRST ${1-right}

default 1Display
default 2Displays count:2

bind 1:ctrl ${2-seg1}
bind 2:ctrl ${2-seg2}
bind 3:ctrl ${2-seg3}
bind 4:ctrl ${2-seg4}
bind 5:ctrl ${2-seg5}
bind 6:ctrl ${2-seg6}
bind /:cmd chain layout 2Displays | layout 1Display

bind j:ctrl focus down
bind k:ctrl focus up
bind h:ctrl focus left
bind l:ctrl focus right
bind `:ctrl move screenOriginX;screenOriginY screenSizeX;screenSizeY 0


